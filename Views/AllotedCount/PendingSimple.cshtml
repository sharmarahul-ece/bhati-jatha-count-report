@model bhati_jatha_count_report.Models.ViewModels.PendingSimpleListViewModel
@{
  ViewData["Title"] = "Pending Daily Actual List";
}
<div class="container-fluid">
  <h2 class="mb-4">Pending Daily Actual List</h2>
  <form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
      <div class="col-auto">
        <label for="date" class="form-label">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
      </div>
    </div>
    @Html.AntiForgeryToken()
  </form>
  <div class="mb-3">
    <button type="button" class="btn btn-outline-secondary btn-sm" onclick="copyPendingList()">
      <i class="bi bi-clipboard"></i> Copy List
    </button>
    <span id="copyAnim" style="display:none; color: green; font-weight: bold; transition: opacity 0.3s;">Copied!</span>
  </div>
  <div class="table-responsive d-flex justify-content-center">
    <table class="table table-bordered table-striped" style="max-width: 420px; min-width: 320px; font-size: 0.95rem; margin: 0 auto;">
      <thead>
        <tr>
          <th>Center</th>
          <th>Sewa Type</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var pending in Model.Pending.OrderBy(p => p.CenterName, System.StringComparer.OrdinalIgnoreCase))
        {
          var btnClass = pending.IsExcluded ? "excluded-row" : "";
          <tr>
            <td style="padding:0;">
              <form method="post" action="@Url.Action("ToggleExclude", "AllotedCount")" style="margin:0;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="centerId" value="@pending.CenterId" />
                <input type="hidden" name="sewaTypeId" value="@pending.SewaTypeId" />
                <input type="hidden" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
                <button type="submit" class="toggle-exclude-btn @btnClass" style="width:100%;border:none;background:transparent;padding:8px 0;cursor:pointer;">
                  <span style="display:inline-block;width:100%;text-align:left;">@pending.CenterName</span>
                </button>
              </form>
            </td>
            <td style="padding:0;">
              <form method="post" action="@Url.Action("ToggleExclude", "AllotedCount")" style="margin:0;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="centerId" value="@pending.CenterId" />
                <input type="hidden" name="sewaTypeId" value="@pending.SewaTypeId" />
                <input type="hidden" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
                <button type="submit" class="toggle-exclude-btn @btnClass" style="width:100%;border:none;background:transparent;padding:8px 0;cursor:pointer;">
                  <span style="display:inline-block;width:100%;text-align:left;">@pending.SewaTypeName</span>
                </button>
              </form>
            </td>
            <td style="vertical-align:middle;text-align:center;">
              @(pending.IsExcluded ? "Excluded" : "")
            </td>
          </tr>
        }
      </tbody>
    </table>
    @if (!Model.Pending.Any())
    {
      <div class="alert alert-success mt-3">No pending entries for the selected date.</div>
    }
    <textarea id="pendingListText" class="form-control d-none" rows="@Model.Pending.Count + 2" readonly>
Pending Actual Count
@{
  int i = 1;
  foreach (var pending in Model.Pending.Where(p => !p.IsExcluded).OrderBy(p => p.CenterName, System.StringComparer.OrdinalIgnoreCase))
  {
    @($"{i}. {pending.CenterName} - {pending.SewaTypeName}\n")
    i++;
  }
}
    </textarea>
  </div>
  <style>
    .excluded-row {
      background-color: #d4edda !important;
      transition: background 0.2s;
    }

    .table td,
    .table th {
      padding: 0.35rem 0.5rem !important;
    }

    .toggle-exclude-btn {
      font-size: 0.97rem;
      padding: 0.25rem 0.5rem !important;
    }
  </style>
  <script>
    function copyPendingList() {
      var textarea = document.getElementById('pendingListText');
      textarea.classList.remove('d-none');
      textarea.select();
      document.execCommand('copy');
      textarea.classList.add('d-none');
      // Show animation/feedback (same as Index.cshtml)
      var anim = document.getElementById('copyAnim');
      if (anim) {
        anim.style.display = 'inline';
        anim.style.opacity = 1;
        setTimeout(function () {
          anim.style.opacity = 0;
          setTimeout(function () {
            anim.style.display = 'none';
            anim.style.opacity = 1;
          }, 400);
        }, 1200);
      }
    }
  </script>