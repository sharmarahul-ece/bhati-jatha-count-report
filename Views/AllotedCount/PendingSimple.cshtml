@model bhati_jatha_count_report.Models.ViewModels.PendingSimpleListViewModel
@{
  ViewData["Title"] = "Pending Daily Actual List";
}
<div class="container-fluid">
  <h2 class="mb-4">Pending Daily Actual List</h2>
  <form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
      <div class="col-auto">
        <label for="date" class="form-label">Date</label>
        <input type="date" class="form-control" id="date" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" onchange="this.form.submit()" />
      </div>
    </div>
  </form>
  <div class="mb-3">
    <button type="button" class="btn btn-outline-secondary" onclick="copyPendingList()">
      <i class="bi bi-clipboard"></i> Copy List
    </button>
  </div>
  <div class="table-responsive">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>Center</th>
          <th>Sewa Type</th>
        </tr>
      </thead>
      <tbody>
        @foreach (var pending in Model.Pending)
        {
          var rowClass = pending.IsExcluded ? "excluded-row" : "";
          <tr class="@rowClass">
            <td colspan="2" style="padding:0;">
              <form method="post" action="@Url.Action("ToggleExclude", "AllotedCount")" style="margin:0;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="centerId" value="@pending.CenterId" />
                <input type="hidden" name="sewaTypeId" value="@pending.SewaTypeId" />
                <input type="hidden" name="date" value="@Model.SelectedDate.ToString("yyyy-MM-dd")" />
                <button type="submit" class="toggle-exclude-btn" style="width:100%;border:none;background:transparent;padding:8px 0;cursor:pointer;">
                  <span style="display:inline-block;width:49%;text-align:left;">@pending.CenterName</span>
                  <span style="display:inline-block;width:49%;text-align:right;">@pending.SewaTypeName</span>
                </button>
              </form>
            </td>
          </tr>
        }
      </tbody>
  <style>
    .excluded-row {
      background-color: #d4edda !important;
      transition: background 0.2s;
    }
  </style>
    </table>
    @if (!Model.Pending.Any())
    {
      <div class="alert alert-success mt-3">No pending entries for the selected date.</div>
    }
    <textarea id="pendingListText" class="form-control d-none" rows="@Model.Pending.Count + 2" readonly>
Pending Actual Count
@{
  int i = 1;
  foreach (var pending in Model.Pending.OrderBy(p => p.CenterName, System.StringComparer.OrdinalIgnoreCase))
  {
    @($"{i}. {pending.CenterName} - {pending.SewaTypeName}\n")
    i++;
  }
}
    </textarea>
  </div>
  <script>
    function copyPendingList() {
      var textarea = document.getElementById('pendingListText');
      textarea.classList.remove('d-none');
      textarea.select();
      document.execCommand('copy');
      textarea.classList.add('d-none');
      alert('Pending list copied to clipboard!');
    }
  </script>
@Html.AntiForgeryToken()
</div>
alert('Pending list copied to clipboard!');
}
</script>
</div>