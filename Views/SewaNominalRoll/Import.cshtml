@model bhati_jatha_count_report.Models.ViewModels.SewaNominalRollImportViewModel

@{
  ViewData["Title"] = "Import Sewa Nominal Roll";
}

<div class="container mt-4">
  <h2>@ViewData["Title"]</h2>

  @if (TempData["Success"] != null)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      @TempData["Success"]
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  }

  @if (TempData["Error"] != null)
  {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      @TempData["Error"]
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
  }


  <div class="row g-3 align-items-end mb-3">
    <div class="col-auto flex-grow-1">
      <form method="post" enctype="multipart/form-data" class="d-flex align-items-end gap-2">
        <div>
          <label for="file" class="form-label mb-0 me-2">Select Excel File</label>
          <input type="file" class="form-control form-control-sm d-inline-block" style="width:auto;display:inline-block;" id="file" name="file" accept=".xlsx" required>
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Import Data</button>
      </form>
    </div>
  </div>

  <div class="row g-3 mb-3">
    <div class="col">
      <form method="get" class="row g-2 align-items-end" id="filterForm">
        <div class="col-md-3">
          <label class="form-label" for="centerFilter">Center</label>
          <input type="text" name="centerFilter" id="centerFilter" class="form-control form-control-sm" placeholder="Type center name..." value="@Model.CenterFilter" autocomplete="off" />
        </div>
        @* Sewa Type filter removed *@
        <div class="col-md-4">
          <label class="form-label">Date Range</label>
          <div class="d-flex">
            <input type="date" name="startDate" class="form-control form-control-sm me-2" value="@(Model.StartDate?.ToString("yyyy-MM-dd"))" onchange="document.getElementById('filterForm').submit()" />
            <input type="date" name="endDate" class="form-control form-control-sm me-2" value="@(Model.EndDate?.ToString("yyyy-MM-dd"))" onchange="document.getElementById('filterForm').submit()" />
            <button type="button" class="btn btn-outline-secondary btn-sm" onclick="clearFilters()">Clear</button>
          </div>
        </div>
        <script>
          function clearFilters() {
            document.getElementById('centerFilter').value = '';
            document.querySelector('input[name="startDate"]').value = '';
            document.querySelector('input[name="endDate"]').value = '';
            filterTable();
          }

          // Async filter for center (no page reload)
          document.addEventListener('DOMContentLoaded', function () {
            document.getElementById('centerFilter').addEventListener('input', filterTable);
          });

          function filterTable() {
            const filter = document.getElementById('centerFilter').value.trim().toLowerCase();
            const rows = document.querySelectorAll('table tbody tr');
            // Find the index of the Centre Name column
            const ths = document.querySelectorAll('table thead th');
            let centerIdx = -1;
            ths.forEach((th, idx) => {
              if (th.textContent.trim().toLowerCase() === 'centre name') centerIdx = idx;
            });
            if (centerIdx === -1) return;
            rows.forEach(row => {
              const tds = row.querySelectorAll('td');
              if (tds.length <= centerIdx) return;
              const centerText = tds[centerIdx].textContent.trim().toLowerCase();
              if (!filter || centerText.includes(filter)) {
                row.style.display = '';
              } else {
                row.style.display = 'none';
              }
            });
          }
        </script>
      </form>
    </div>
  </div>

  <div class="mt-4 card">
    <div class="card-body">
      <div class="mb-2">
        <span class="fw-bold">Total Records:</span> <span id="totalRecords">@Model.Results.Count()</span>
        <span class="fw-bold ms-4">Sum of Count:</span> <span id="sumCount">@Model.Results.Sum(r => r.TotalSewadars)</span>
      </div>
      <div class="table-responsive" style="max-height:500px; overflow:auto;">
        <table class="table table-sm table-bordered table-hover">
          <thead class="table-light position-sticky" style="top:0; z-index:1;">
            <tr>
              <th>#</th>
              <th>NominalRollToken</th>
              <th>Sewa Date</th>
              <th>Journey Date</th>
              <th>Duration</th>
              @* <th>SewaName</th> *@
              @* <th>Department</th> *@
              @* <th>Zone</th> *@
              <th>Centre Name</th>
              <th>M</th>
              <th>F</th>
              <th>Total</th>
              @* <th>SewaType</th> *@
              @* <th>InchargeName</th> *@
              @* <th>InchargeContact</th> *@
              <th>Remarks</th>
              <th>Start Time</th>
              @* <th>SourceFile</th> *@
              @* <th>CreatedAt</th> *@
            </tr>
          </thead>
          <tbody>
            @{
              var sn = 1;
            }
            @foreach (var r in Model.Results.OrderBy(r => r.CentreName))
            {
              <tr>
                <td>@sn</td>
                <td>@r.NominalRollToken</td>
                <td>@(r.SewaDate == DateTime.MinValue ? "" : r.SewaDate.ToString("yyyy-MM-dd"))</td>
                <td>@(r.JourneyDate == DateTime.MinValue ? "" : r.JourneyDate.ToString("yyyy-MM-dd"))</td>
                <td>@r.SewaDuration</td>
                @* <td>@r.SewaName</td> *@
                @* <td>@r.Department</td> *@
                @* <td>@r.Zone</td> *@
                <td>@r.CentreName</td>
                <td>@r.Males</td>
                <td>@r.Females</td>
                <td>@r.TotalSewadars</td>
                @* <td>@r.SewaType</td> *@
                @* <td>@r.InchargeName</td> *@
                @* <td>@r.InchargeContact</td> *@
                <td>@r.Remarks</td>
                <td>@r.SewaStartTime</td>
                @* <td>@r.SourceFileName</td> *@
                @* <td>@(r.CreatedAt == DateTime.MinValue ? "" : r.CreatedAt.ToString("yyyy-MM-dd HH:mm"))</td> *@
              </tr>
              sn++;
            }
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div class="mt-3">
    <h5>Imported source files</h5>
    <div class="d-flex gap-2 flex-wrap">
      @foreach (var f in Model.SourceFiles)
      {
        <form method="post" asp-action="DeleteFileData" onsubmit="return confirm('Delete all rows imported from ' + '@f' + '?');">
          <input type="hidden" name="filename" value="@f" />
          <button type="submit" class="btn btn-outline-danger btn-sm">Delete @f</button>
        </form>
      }
      @if (!Model.SourceFiles.Any())
      {
        <div class="text-muted">No source files</div>
      }
    </div>
  </div>

</div>