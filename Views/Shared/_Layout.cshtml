<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - bhati_jatha_count_report</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Make sidebar navigation text larger */
        #sidebarMenu .nav-link {
            font-size: 1.15rem;
        }
    </style>
    <link rel="stylesheet" href="~/bhati_jatha_count_report.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar toggle button for mobile -->
            <button class="btn btn-outline-secondary d-md-none m-2" type="button" data-bs-toggle="collapse" data-bs-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
                <i class="bi bi-list" style="font-size: 1.5rem;"></i>
            </button>
            <!-- Sidebar -->
            <nav id="sidebarMenu" class="col-md-2 bg-light sidebar vh-100 p-0 border-end collapse d-md-block">
                <div class="sidebar-sticky pt-3">
                    <a class="navbar-brand d-block mb-4 px-3 py-2 fw-bold text-center" asp-area="" asp-controller="Home" asp-action="Index" style="font-size:1.5rem;">BJCR</a>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Center" asp-action="Index">Centers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SewaType" asp-action="Index">Sewa Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="DailyActualCount" asp-action="Index">Daily Actual Count</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AllotedCount" asp-action="Index">Alloted Count</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AllotedCount" asp-action="Tabular">Alloted Count Tabular</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AllotedCount" asp-action="PendingSimple">Pending Daily Actual List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="AllotedCount" asp-action="PendingActual">Pending Daily Actual Count</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="SewaNominalRoll" asp-action="Import">Import Sewa Roll</a>
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- Main content -->
            <main role="main" class="col-md-10 ms-sm-auto px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BJCR
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>